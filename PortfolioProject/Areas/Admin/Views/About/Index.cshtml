@using PortfolioProject.Areas.Admin.Models
@model IEnumerable<AboutModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/_Layout.cshtml";
}

<h1>About Me</h1>

<table>


    <tr>
        <th>
            About Description
        </th>
        <th>
            Project Decription
        </th>
</tr>
    @foreach (var item in Model)
    {
            <tr>
                <td>@item.AboutDescription</td>
                <td>
                    <img src="~/customimg/@item.AboutImageUrl" style="width:40px; height:40px;" />
                </td>

            <td>  <button class="btn-outline-danger"><a style="text-decoration:none" asp-route-Id="@item.AboutId" asp-action="Edit" asp-area="Admin" asp-controller="About">Edit</a> </button></td>
            <td> <button class="btn-outline-danger"><a style="text-decoration:none" asp-route-Id="@item.AboutId" asp-action="Delete" asp-area="Admin" asp-controller="About">Delete</a></button> </td>

            </tr>

    }
</table>
<button class="btn-warning"><a style="text-decoration:none" asp-action="Create">Create New Profile</a></button>