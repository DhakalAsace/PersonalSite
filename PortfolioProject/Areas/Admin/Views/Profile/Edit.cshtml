@using PortfolioProject.Areas.Admin.Models
@model ProfileModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Layout/_Layout.cshtml";
}

<h1>Edit</h1>

<form method="post" enctype="multipart/form-data">
    @Html.HiddenFor(a=>a.ImageId)
    <label asp-for="ImageName"></label>
    <input asp-for="ImageName" />
    <label asp-for="Description"></label>
    <input asp-for="Description" />
    <label asp-for="Image"></label>
    <input asp-for="Image" />
    
    <button type="submit" asp-action="Create" asp-area="Admin" asp-controller="Profile">Submit</button>

</form>
